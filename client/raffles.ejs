<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>JS Raffler</title>
  </head>
  <body>
  <h1>JS Raffler<% if (typeof username !== 'undefined') { %> - Welcome <%=
      username %><% } %></h1>

      <% if (typeof username !== 'undefined') { %>
      <form action='/raffles' method="post">
        <input type="submit" name="submit" value="New Raffle">
      </form>
      <% } %>

    <table border=1 cellpadding=5>
      <tr>
        <th>Raffles</th>
        <th>Winners</th>
      </tr>

      <% for ( var i = raffles.length - 1; i >= 0; i--) { %>
      <tr><td>
        <a href="/raffles/<%= raffles[i].id %>"><%= raffles[i].date %></a></td><td>winners</td></tr>
      <% } %>

    </table>
  </body>
</html>
