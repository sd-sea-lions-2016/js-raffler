<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <script src="https://code.jquery.com/jquery-2.2.3.js" integrity="sha256-laXWtGydpwqJ8JA+X9x2miwmaiKhn8tVmOVEigRNtP4=" crossorigin="anonymous">
  </script>
  <script src="application.js"></script>
  <title>JS Raffler</title>
</head>

<body>

  <h1>SDJS Raffler<% if (typeof username !== 'undefined') { %> - Welcome <%= username %><% } %></h1>

  <% if (typeof username !== 'undefined') { %>
    <form action='/raffles' method="post">
      <input type="submit" name="submit" value="Create New Raffle">
    </form>
  <% } else { %>
    <form action='/' method="get">
      <input type="submit" name="submit" value="Login">
    </form>
  <% } %>

  <br>

  <table border=1 cellpadding=5>
    <tr>
      <th>ID</th>
      <th>Past Raffles</th>
      <th># Registered</th>
    </tr>

    <% for ( var i = raffles.length - 1; i >= 0; i--) { %>
    <tr>
      <td><%= raffles[i].id %></td>
      <td><a href="/raffles/<%= raffles[i].id %>"><%= raffles[i].date.toLocaleDateString() %></a></td>
      <td>TBD</td>
    <% } %>

  </table>

</body>
</html>
