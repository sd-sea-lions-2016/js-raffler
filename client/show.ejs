<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/css/app.css">
    <link href='http://fonts.googleapis.com/css?family=Lato&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <title>JS Raffler</title>
  </head>
  <body>

<!-- <h4>Raffle #: <%= raffle.id %></h4> -->
<h4>Date: <span><%= raffle.date.toLocaleString() %></span></h4>

<% if (previous_winners && previous_winners.length > 0) { %>
  <h3>Winners Circle</h3>

  <table class="raffle-list" id="raffle-list">
    <tr class="raffle-list-item"><th class="raffle-info">Name</th><th class="raffle-info">Ticket#</th></tr>
    <% for ( var i = 0; i < previous_winners.length; i++) { %>
      <tr class="raffle-list-item">
        <td class="raffle-info"><%= previous_winners[i].username %></td>
        <td class="raffle-info"><%= previous_winners[i].id.split('').splice(0,6).join('') %></td>
      </tr>
    <% } %>
  </table>

<% } else { %>
  <h3>No winners</h3>
<% } %>

<% if (raffle.active) { %>
  <form action="/raffles/<%= raffle.id %>/end" method="post" class="login">
    <input type="submit" name="submit" value="End Raffle">
  </form>
<% } else { %>

  <a class="default-btn" href="/raffles">Exit Raffle</a>

<% } %>
